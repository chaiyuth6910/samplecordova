<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.inapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>inappBrowsers</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <splash density="land-hdpi" src="platforms/android/res/drawable-land-hdpi/screen.png" />
    <splash density="land-ldpi" src="platforms/android/res/drawable-land-ldpi/screen.png" />
    <splash density="land-mdpi" src="platforms/android/res/drawable-land-mdpi/screen.png" />
    <splash density="land-xhdpi" src="platforms/android/res/drawable-land-xhdpi/screen.png" />
    <splash density="port-hdpi" src="platforms/android/res/drawable-port-hdpi/screen.png" />
    <splash density="port-ldpi" src="platforms/android/res/drawable-port-ldpi/screen.png" />
    <splash density="port-mdpi" src="platforms/android/res/drawable-port-mdpi/screen.png" />
    <splash density="port-xhdpi" src="platforms/android/res/drawable-port-xhdpi/screen.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="orientation" value="portrait" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
