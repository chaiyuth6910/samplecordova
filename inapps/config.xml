<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.inapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>inappBrowsers</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>

    <preference name="orientation" value="portrait"/>

    <preference name = "SplashScreen" value = "screen" />
    <preference name = "SplashScreenDelay" value = "3000" />
    <preference name = "SplashMaintainAspectRatio" value = "true" />

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

            <splash src="platforms/android/res/drawable-land-hdpi/screen.png" density="land-hdpi"/>
            <splash src="platforms/android/res/drawable-land-ldpi/screen.png" density="land-ldpi"/>
            <splash src="platforms/android/res/drawable-land-mdpi/screen.png" density="land-mdpi"/>
            <splash src="platforms/android/res/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>

            <splash src="platforms/android/res/drawable-port-hdpi/screen.png" density="port-hdpi"/>
            <splash src="platforms/android/res/drawable-port-ldpi/screen.png" density="port-ldpi"/>
            <splash src="platforms/android/res/drawable-port-mdpi/screen.png" density="port-mdpi"/>
            <splash src="platforms/android/res/drawable-port-xhdpi/screen.png" density="port-xhdpi"/>


    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="~1.4.0" />
    <engine name="android" spec="~5.2.2" />
</widget>
